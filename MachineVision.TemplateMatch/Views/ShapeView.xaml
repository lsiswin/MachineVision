<UserControl
    x:Class="MachineVision.TemplateMatch.Views.ShapeView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:MachineVision.shard.Controls;assembly=MachineVision.shard"
    xmlns:core="clr-namespace:MachineVision.Core;assembly=MachineVision.Core"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MachineVision.TemplateMatch.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance Type=core:NavigationViewModel}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Margin="15">
            <TextBlock
                Margin="0,5"
                FontSize="25"
                FontWeight="Bold"
                Text="find_shape_model" />
            <TextBlock Text="Find the best matches of a shape model in an image" />
        </StackPanel>
        <TabControl Grid.Row="1" HorizontalContentAlignment="Left">
            <TabItem Header="参数说明">
                <ItemsControl Margin="15,5" ItemsSource="{Binding MatchService.Info.MethodParameters}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,5">
                                <TextBlock
                                    FontSize="15"
                                    FontWeight="Bold"
                                    Text="{Binding Name}" />
                                <TextBlock Margin="10,0" Text="{Binding Description}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </TabItem>
            <TabItem Header="关联算子">
                <ItemsControl Margin="15,5" ItemsSource="{Binding MatchService.Info.Predecessors}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Margin="0,5">
                                <TextBlock
                                    FontSize="15"
                                    FontWeight="Bold"
                                    Text="{Binding}" />
                            </StackPanel>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </TabItem>
            <TabItem Header="代码示例" />
            <TabItem Header="开始使用">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition Width="0.5*" />
                    </Grid.ColumnDefinitions>
                    <!--  图像编辑器  -->
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="0.4*" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <controls:ImageEditView
                            DrawingObjectList="{Binding DrawingObjectList}"
                            Image="{Binding Image}"
                            MatchResult="{Binding MatchResult}" />

                        <DataGrid
                            Grid.Row="1"
                            AutoGenerateColumns="False"
                            BorderThickness="0"
                            CanUserAddRows="False"
                            ColumnWidth="*"
                            IsReadOnly="True"
                            ItemsSource="{Binding MatchResult.Results}">
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Index}"
                                    Header="序号" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Row}"
                                    Header="Row" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Column}"
                                    Header="Column" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Angle}"
                                    Header="角度" />
                                <DataGridTextColumn
                                    Width="*"
                                    Binding="{Binding Score}"
                                    Header="分数" />
                            </DataGrid.Columns>
                        </DataGrid>

                        <TextBlock
                            Grid.Row="2"
                            Margin="5"
                            FontSize="13"
                            Text="{Binding MatchResult.Message}" />
                    </Grid>
                    <Grid Grid.Column="1">
                        <TabControl HorizontalContentAlignment="Left">
                            <TabItem Header="基本参数">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition Height="auto" />
                                    </Grid.RowDefinitions>

                                    <ScrollViewer VerticalScrollBarVisibility="Hidden">
                                        <StackPanel>
                                            <Expander>
                                                <Expander.Header>
                                                    <Grid Margin="-20,0">
                                                        <TextBlock FontSize="16" Text="图像源" />
                                                    </Grid>
                                                </Expander.Header>
                                                <Expander.Content>
                                                    <StackPanel>
                                                        <Button Command="{Binding LoadImageCommand}" Content="加载图像" />
                                                    </StackPanel>
                                                </Expander.Content>
                                            </Expander>

                                            <Expander>
                                                <Expander.Header>
                                                    <Grid Margin="-20,0">
                                                        <TextBlock FontSize="16" Text="ROI范围" />
                                                    </Grid>
                                                </Expander.Header>
                                                <Expander.Content>
                                                    <StackPanel>
                                                        <Button Command="{Binding SetRangeCommand}" Content="设置识别范围" />
                                                    </StackPanel>
                                                </Expander.Content>
                                            </Expander>

                                            <Expander>
                                                <Expander.Header>
                                                    <Grid Margin="-20,0">
                                                        <TextBlock FontSize="16" Text="模板参数" />
                                                    </Grid>
                                                </Expander.Header>
                                                <Expander.Content>
                                                    <StackPanel Margin="5,0">
                                                        <TextBlock Text="NumLevels" />
                                                        <ComboBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                            Text="{Binding MatchService.TemplateParameter.NumLevels}">
                                                            <ComboBoxItem>auto</ComboBoxItem>
                                                            <ComboBoxItem>0</ComboBoxItem>
                                                            <ComboBoxItem>1</ComboBoxItem>
                                                            <ComboBoxItem>2</ComboBoxItem>
                                                            <ComboBoxItem>3</ComboBoxItem>
                                                            <ComboBoxItem>4</ComboBoxItem>
                                                            <ComboBoxItem>5</ComboBoxItem>
                                                            <ComboBoxItem>6</ComboBoxItem>
                                                            <ComboBoxItem>7</ComboBoxItem>
                                                            <ComboBoxItem>8</ComboBoxItem>
                                                            <ComboBoxItem>9</ComboBoxItem>
                                                            <ComboBoxItem>10</ComboBoxItem>
                                                        </ComboBox>
                                                        <TextBlock Text="AngleStart" />
                                                        <TextBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                            Text="{Binding MatchService.TemplateParameter.AngleStart}" />
                                                        <TextBlock Text="AngleExtent" />
                                                        <TextBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                            Text="{Binding MatchService.TemplateParameter.AngleExtent}" />
                                                        <TextBlock Text="AngleStep" />
                                                        <ComboBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                            Text="{Binding MatchService.TemplateParameter.AngleStep}">
                                                            <ComboBoxItem>auto</ComboBoxItem>
                                                            <ComboBoxItem>0.01</ComboBoxItem>
                                                            <ComboBoxItem>0.03</ComboBoxItem>
                                                            <ComboBoxItem>0.05</ComboBoxItem>
                                                            <ComboBoxItem>0.06</ComboBoxItem>
                                                            <ComboBoxItem>0.08</ComboBoxItem>
                                                        </ComboBox>
                                                        <TextBlock Text="Optimization" />
                                                        <ComboBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                            Text="{Binding MatchService.TemplateParameter.Optimization}">
                                                            <ComboBoxItem>auto</ComboBoxItem>
                                                            <ComboBoxItem>none</ComboBoxItem>
                                                            <ComboBoxItem>point_reduction_low</ComboBoxItem>
                                                            <ComboBoxItem>point_reduction_medium</ComboBoxItem>
                                                            <ComboBoxItem>point_reduction_high</ComboBoxItem>
                                                            <ComboBoxItem>pregeneration</ComboBoxItem>
                                                            <ComboBoxItem>no_pregeneration</ComboBoxItem>
                                                        </ComboBox>
                                                        <TextBlock Text="Metric" />
                                                        <ComboBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                            Text="{Binding MatchService.TemplateParameter.Metric}">
                                                            <ComboBoxItem>use_polarity</ComboBoxItem>
                                                            <ComboBoxItem>ignore_global_polarity</ComboBoxItem>
                                                            <ComboBoxItem>ignore_local_polarity</ComboBoxItem>
                                                            <ComboBoxItem>ignore_color_polarity</ComboBoxItem>
                                                        </ComboBox>
                                                        <TextBlock Text="Contrast" />
                                                        <ComboBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                            Text="{Binding MatchService.TemplateParameter.Contrast}">
                                                            <ComboBoxItem>auto</ComboBoxItem>
                                                            <ComboBoxItem>auto_contrast</ComboBoxItem>
                                                            <ComboBoxItem>auto_contrast_hyst</ComboBoxItem>
                                                            <ComboBoxItem>auto_min_size</ComboBoxItem>
                                                            <ComboBoxItem>10</ComboBoxItem>
                                                            <ComboBoxItem>20</ComboBoxItem>
                                                            <ComboBoxItem>30</ComboBoxItem>
                                                            <ComboBoxItem>40</ComboBoxItem>
                                                            <ComboBoxItem>60</ComboBoxItem>
                                                            <ComboBoxItem>80</ComboBoxItem>
                                                        </ComboBox>
                                                        <TextBlock Text="MinContrast" />
                                                        <ComboBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                            Text="{Binding MatchService.TemplateParameter.MinContrast}">
                                                            <ComboBoxItem>auto</ComboBoxItem>
                                                            <ComboBoxItem>1</ComboBoxItem>
                                                            <ComboBoxItem>2</ComboBoxItem>
                                                            <ComboBoxItem>3</ComboBoxItem>
                                                            <ComboBoxItem>4</ComboBoxItem>
                                                            <ComboBoxItem>5</ComboBoxItem>
                                                            <ComboBoxItem>7</ComboBoxItem>
                                                            <ComboBoxItem>10</ComboBoxItem>
                                                            <ComboBoxItem>20</ComboBoxItem>
                                                            <ComboBoxItem>30</ComboBoxItem>
                                                            <ComboBoxItem>40</ComboBoxItem>
                                                        </ComboBox>

                                                        <Button
                                                            Margin="0,10"
                                                            Command="{Binding CreateTemplateCommand}"
                                                            Content="创建匹配模板" />
                                                    </StackPanel>
                                                </Expander.Content>
                                            </Expander>

                                            <Expander>
                                                <Expander.Header>
                                                    <Grid Margin="-20,0">
                                                        <TextBlock FontSize="16" Text="运行参数" />
                                                    </Grid>
                                                </Expander.Header>
                                                <Expander.Content>
                                                    <StackPanel Margin="5,0">
                                                        <TextBlock Text="AngleStart" />
                                                        <TextBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                            Text="{Binding MatchService.RunParameter.AngleStart}" />
                                                        <TextBlock Text="AngleExtent" />
                                                        <TextBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                            Text="{Binding MatchService.RunParameter.AngleExtent}" />
                                                        <TextBlock Text="MinScore" />
                                                        <TextBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                            Text="{Binding MatchService.RunParameter.MinScore}" />
                                                        <TextBlock Text="NumMatches" />
                                                        <TextBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                            Text="{Binding MatchService.RunParameter.NumMatches}" />
                                                        <TextBlock Text="MaxOverlap" />
                                                        <TextBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                            Text="{Binding MatchService.RunParameter.MaxOverlap}" />
                                                        <TextBlock Text="SubPixel" />
                                                        <ComboBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                            Text="{Binding MatchService.RunParameter.SubPixel}">
                                                            <ComboBoxItem>none</ComboBoxItem>
                                                            <ComboBoxItem>none</ComboBoxItem>
                                                            <ComboBoxItem>interpolation</ComboBoxItem>
                                                            <ComboBoxItem>least_squares</ComboBoxItem>
                                                            <ComboBoxItem>least_squares_high</ComboBoxItem>
                                                            <ComboBoxItem>least_squares_very_high</ComboBoxItem>
                                                            <ComboBoxItem>max_deformation 1</ComboBoxItem>
                                                            <ComboBoxItem>max_deformation 2</ComboBoxItem>
                                                            <ComboBoxItem>max_deformation 3</ComboBoxItem>
                                                            <ComboBoxItem>max_deformation 4</ComboBoxItem>
                                                            <ComboBoxItem>max_deformation 5</ComboBoxItem>
                                                            <ComboBoxItem>max_deformation 6</ComboBoxItem>
                                                        </ComboBox>
                                                        <TextBlock Text="NumLevels" />
                                                        <ComboBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedComboBox}"
                                                            Text="{Binding MatchService.RunParameter.NumLevels}">
                                                            <ComboBoxItem>0</ComboBoxItem>
                                                            <ComboBoxItem>1</ComboBoxItem>
                                                            <ComboBoxItem>2</ComboBoxItem>
                                                            <ComboBoxItem>3</ComboBoxItem>
                                                            <ComboBoxItem>4</ComboBoxItem>
                                                            <ComboBoxItem>5</ComboBoxItem>
                                                            <ComboBoxItem>6</ComboBoxItem>
                                                            <ComboBoxItem>7</ComboBoxItem>
                                                            <ComboBoxItem>8</ComboBoxItem>
                                                            <ComboBoxItem>9</ComboBoxItem>
                                                        </ComboBox>
                                                        <TextBlock Text="Greediness" />
                                                        <TextBox
                                                            Margin="0,5"
                                                            Padding="5"
                                                            Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                            Text="{Binding MatchService.RunParameter.Greediness}" />
                                                    </StackPanel>
                                                </Expander.Content>
                                            </Expander>
                                        </StackPanel>
                                    </ScrollViewer>

                                    <StackPanel Grid.Row="1" Margin="10,10">
                                        <Button Command="{Binding RunCommand}" Content="执行" />
                                    </StackPanel>
                                </Grid>
                            </TabItem>
                            <TabItem Header="结果显示">
                                <StackPanel Margin="10">
                                    <DockPanel LastChildFill="False">
                                        <TextBlock FontSize="14" Text="显示文本" />
                                        <ToggleButton DockPanel.Dock="Right" IsChecked="{Binding MatchService.Setting.IsShowDisplayText}" />
                                    </DockPanel>

                                    <DockPanel Margin="0,15" LastChildFill="False">
                                        <TextBlock FontSize="14" Text="显示中点" />
                                        <ToggleButton DockPanel.Dock="Right" IsChecked="{Binding MatchService.Setting.IsShowCenter}" />
                                    </DockPanel>

                                    <DockPanel LastChildFill="False">
                                        <TextBlock FontSize="14" Text="显示检测范围" />
                                        <ToggleButton DockPanel.Dock="Right" IsChecked="{Binding MatchService.Setting.IsShowMatchRange}" />
                                    </DockPanel>
                                </StackPanel>
                            </TabItem>
                        </TabControl>
                    </Grid>

                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
