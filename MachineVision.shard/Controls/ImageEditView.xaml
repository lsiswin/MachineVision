<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:control="clr-namespace:MachineVision.shard.Controls"
    xmlns:halcon="clr-namespace:HalconDotNet;assembly=halcondotnet"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Style TargetType="control:ImageEditView">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>
                    <Grid Background="Black">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <TextBlock
                            x:Name="PART_MSG"
                            Margin="5"
                            Foreground="White" />
                        <StackPanel
                            Margin="5"
                            HorizontalAlignment="Right"
                            Orientation="Horizontal">
                            <Button
                                x:Name="PART_Rect"
                                Margin="5,0"
                                ToolTip="绘制矩形">
                                <md:PackIcon Kind="RectangleOutline" />
                            </Button>
                            <Button
                                x:Name="PART_Circle"
                                Margin="5,0"
                                ToolTip="绘制圆形">
                                <md:PackIcon Kind="CheckboxBlankCircleOutline" />
                            </Button>
                            <Button
                                x:Name="PART_Ellipse"
                                Margin="5,0"
                                ToolTip="绘制椭圆">
                                <md:PackIcon Kind="EllipseOutline" />
                            </Button>
                            <Button
                                x:Name="PART_DrawPen"
                                Margin="5,0"
                                ToolTip="绘制形状">
                                <md:PackIcon Kind="DrawPen" />
                            </Button>
                            <Button
                                x:Name="Clear"
                                Margin="5,0"
                                ToolTip="清空所有">
                                <md:PackIcon Kind="Replay" />
                            </Button>
                        </StackPanel>
                        <halcon:HSmartWindowControlWPF x:Name="PART_SMART" Grid.Row="1" />
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>