<UserControl
    x:Class="MachineVision.Views.SettingView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MachineVision.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock
            Margin="15"
            FontSize="22"
            Text="{DynamicResource Setting}" />
        <StackPanel
            Grid.Row="1"
            Margin="10"
            HorizontalAlignment="Left"
            VerticalAlignment="Top">
            <TextBlock
                Margin="5"
                FontSize="20"
                Text="{DynamicResource CurrentLanguage}" />
            <ComboBox
                Width="150"
                Padding="5"
                HorizontalAlignment="Center"
                ItemsSource="{Binding LanguageInfos}"
                SelectedItem="{Binding CurrentLanguage}"
                Style="{StaticResource MaterialDesignOutlinedComboBox}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding Value}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <TextBlock
                Margin="5"
                FontSize="20"
                Text="{DynamicResource Skin}" />
            <ComboBox
                Width="150"
                Margin="5"
                Padding="5"
                HorizontalAlignment="Center"
                Style="{StaticResource MaterialDesignOutlinedComboBox}">
                <ComboBoxItem>深色</ComboBoxItem>
                <ComboBoxItem>浅色</ComboBoxItem>
            </ComboBox>
            <Button
                Margin="5"
                Command="{Binding SaveCommand}"
                Content="{DynamicResource SaveSetting}" />
        </StackPanel>
    </Grid>
</UserControl>
